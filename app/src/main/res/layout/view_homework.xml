<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_marginTop="10dp"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/llSwitchDate"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="#F44336">

        <TextView
            android:id="@+id/tvZZ1"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="เวลาที่ส่ง"
            android:textColor="#ffffff"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/tvTime"
            android:layout_marginLeft="5dp"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="00:00 น."
            android:textColor="#ffffff"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/tvDate"
            android:layout_marginLeft="5dp"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="00 ต.ค. 60"
            android:textSize="18sp"
            android:textColor="#ffffff"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#ffffff"
        android:orientation="horizontal"
        android:weightSum="300">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="45"
            android:padding="7dp">

            <ImageView
                android:id="@+id/imProfile"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/im_profile" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="225"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvPostUsername"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="xxxxxx xxxxxx"
                android:textColor="#01579B"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/tvStudentId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#a3a3a3"
                android:text="xxxxxx xxxxxx"
                android:textSize="18sp"/>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/llEditPost"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="30">

            <ImageView
                android:id="@+id/ivEditPost"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_down_select"
                android:tint="#a4a4a4" />

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="#ffffff">

        <TextView
            android:id="@+id/tvText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="xxxxxx"
            android:textSize="24sp"
            android:autoLink="all"
            android:maxLines="500"
            android:textColor="#000000"/>
    </LinearLayout>



    <LinearLayout
        android:id="@+id/llImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:orientation="horizontal"
        android:layout_marginTop="1dp"
        android:padding="10dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_image"
            android:tint="#8BC34A"/>
        <TextView
            android:layout_marginLeft="10dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="รูปภาพ"
            android:textColor="#000000"/>
        <TextView
            android:layout_marginLeft="5dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="กดเพื่อดูรูปภาพ"
            android:textSize="14sp"
            android:textColor="#b7b7b7"/>
    </LinearLayout>



    <LinearLayout
        android:id="@+id/llFile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:orientation="horizontal"
        android:layout_marginTop="1dp"
        android:padding="10dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_file"
            android:tint="#01579B"/>
        <TextView
            android:layout_marginLeft="10dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ไฟล์แนบ"
            android:textColor="#000000"/>
        <TextView
            android:layout_marginLeft="5dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="กดเพื่อดูไฟล์"
            android:textSize="14sp"
            android:textColor="#b7b7b7"/>
    </LinearLayout>

</LinearLayout>