<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:layout_marginTop="1dp"
    android:background="#ffffff"
    android:orientation="horizontal"
    android:weightSum="50">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="12"
        android:gravity="left">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="9dp">

            <com.mikhaellopez.circularimageview.CircularImageView
                android:id="@+id/circularClassroom"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/im_profile_group"/>

            <com.mikhaellopez.circularimageview.CircularImageView
                android:id="@+id/imLock"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_gravity="right|bottom"
                android:foregroundGravity="bottom"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_lock_v2"
                app:civ_border_color="#ffffff"
                app:civ_border_width="0dp"
                app:civ_shadow="true"
                app:civ_shadow_color="#afafaf"
                app:civ_shadow_radius="2" />

        </FrameLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="27"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingLeft="10dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:orientation="horizontal">

            <TextView
                android:layout_gravity="center_vertical"
                android:id="@+id/tv_subject_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="รหัสวิชา"
                android:textColor="#43A047"
                android:textSize="21sp" />

            <TextView
                android:layout_marginLeft="5dp"
                android:layout_gravity="center_vertical"
                android:id="@+id/tv_subject_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ชื่อวิชา"
                android:textColor="#000000"
                android:textSize="21sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="สอนโดย :"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tvUsername"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="ชื่อผู้สอน"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginTop="3dp"
            android:background="#dadada"
            android:orientation="horizontal"
            android:paddingLeft="5dp"
            android:paddingRight="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sec."
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_subject_sec"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="11"
        android:gravity="right">

        <TextView
            android:id="@+id/btnRegClassroom"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="10dp"
            android:background="@drawable/bg_btn_color_green"
            android:gravity="center"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"

            android:text="ลงทะเบียน"
            android:textColor="#ffffff"
            android:textSize="15sp" />

    </LinearLayout>

</LinearLayout>