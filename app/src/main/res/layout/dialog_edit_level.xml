<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:background="#f3f1f4">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ชั้นปี"
        android:id="@+id/textView3"
        android:gravity="center"
        android:textSize="21sp"
        android:textColor="#339fc6"/>

    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="5">

        <LinearLayout
            android:layout_marginRight="1dp"
            android:layout_marginLeft="1dp"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:background="@drawable/bg_btn_select"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/textViewNum1"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="1"
                android:textColor="#ffffff"
                android:textSize="22sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginRight="1dp"
            android:layout_marginLeft="1dp"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:background="@drawable/bg_btn_select"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/textViewNum2"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="2"
                android:textColor="#ffffff"
                android:textSize="22sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginRight="1dp"
            android:layout_marginLeft="1dp"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:background="@drawable/bg_btn_select"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/textViewNum3"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="3"
                android:textColor="#ffffff"
                android:textSize="22sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginRight="1dp"
            android:layout_marginLeft="1dp"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:background="@drawable/bg_btn_select"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/textViewNum4"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="4"
                android:textColor="#ffffff"
                android:textSize="22sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginRight="1dp"
            android:layout_marginLeft="1dp"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:background="@drawable/bg_btn_select"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/textViewNum5"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="5"
                android:textColor="#ffffff"
                android:textSize="22sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>

